.inner-part{
  position: absolute;
  display: flex;
  height: 360px;
  align-items: center;
  justify-content: center;
  padding: 0 25px;
}

#imgTap:checked ~ .inner-part {
  padding: 0;
  transition: .1s ease-in;
}
